CREATE TABLE Movie (
  id INT,
  title VARCHAR(255),
  release_date DATE,
  plot TEXT,
  runtime INT,
  language VARCHAR(50),
  country VARCHAR(50),
  );

CREATE TABLE Media (
  id INT,
  movie_id INT,
  type ENUM('Video', 'Image'),
  url VARCHAR(255),
  );

CREATE TABLE Genre (
  id INT,
  name VARCHAR(50) 
);

CREATE TABLE MovieGenre (
  movie_id INT,
  genre_id INT,
);

CREATE TABLE Review (
  id INT,
  movie_id INT,
  user_id INT,
  rating DECIMAL(2, 1),
  comment TEXT
  );
  
CREATE TABLE User (
  id INT,
  name VARCHAR(50),
  email VARCHAR(255),
  password VARCHAR(255)
);

CREATE TABLE Artist (
  id INT,
  name VARCHAR(50),
  birth_date DATE,
  bio TEXT
);

CREATE TABLE Skill (
  id INT,
  name VARCHAR(50)
);

CREATE TABLE ArtistSkill (
  artist_id INT NOT NULL,
  skill_id INT NOT NULL,
  );

CREATE TABLE MovieArtist (
  id INT,
  movie_id INT,
  artist_id INT,
  role VARCHAR(50),
  );
